<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imageTotalCases"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/ic_lungs_virus_solid"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/totalCasesTitle"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:text="Total cazuri confirmate"
                android:textColor="@color/gray1"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:typeface="sans"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/totalCasesNo"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="45dp"
                android:text="600,900"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:typeface="sans"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="30sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/lungVirusImg"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/ic_virus_slash_solid"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/totalCureCasesTitle"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Vindecati"
                android:textAlignment="center"
                android:textColor="@color/gray1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/totalCureCasesNo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="45dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="40,800"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/deadImg"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="190dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_skull_crossbones_solid"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/totalDeathsTitle"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="250dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:text="Decedati"
                android:textColor="@color/gray1"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:typeface="sans"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/totalDeathsNo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="45dp"
                android:text="40,800"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:typeface="sans"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <View
                android:id="@+id/divider"
                android:layout_width="2dp"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="120dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/light_red"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">


            <TextView
                android:id="@+id/totalCasesATI"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Internati ATI"
                android:textAlignment="center"
                android:textColor="@color/virus"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/totalCasesNo2"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="45dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="600,900"
                android:textColor="@color/virus"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/imageTotalICU"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="19dp"
                app:srcCompat="@drawable/ic_user_nurse_solid"
                tools:ignore="VectorDrawableCompat" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="379dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imageDailyCases"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/ic_viruses_solid"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/dailyCasesTitle"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="5 Februarie 2021"
                android:textAlignment="center"
                android:textColor="@color/gray1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dailyCasesConfirmed"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="33dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Cazuri confirmate"
                android:textAlignment="center"
                android:textColor="@color/gray1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dailyCasesNo"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="6,100"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dailyDeathsTitle"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="33dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Decedati"
                android:textAlignment="center"
                android:textColor="@color/gray1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dailyDeathsNo"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </androidx.cardview.widget.CardView>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/statusChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="18dp" />
    </RelativeLayout>
</ScrollView>